// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum MessageType {
  TEXT
  IMAGE
  COMPONENT
}

model User {
  id        String @id @default(cuid())
  username  String @unique
  hashedPwd String
  role      Role   @default(USER)
  chatrooms1 Chatroom[] @relation("User1Chatroom")
  chatrooms2 Chatroom[] @relation("User2Chatroom")
}

model Post {
  id      String @id @default(cuid())
  title   String
  detail  String
  content String
  price   Float
}

model Product {
  id       String @id @default(cuid())
  title    String
  desc     String
  price    Float
  deadline String
  status   String
  note     String
}

model Message {
  id           String      @id @default(uuid())
  senderId     String
  content      String
  messageType  MessageType
  isRead       Boolean     @default(false)
  date         DateTime    @default(now())
  chatRoomId   String
  chatRoom     Chatroom    @relation(fields: [chatRoomId], references: [id])
}

model Chatroom {
  id          String   @id @default(uuid())
  messages    Message[]
  user1Id     String
  user1       User     @relation("User1Chatroom", fields: [user1Id], references: [id])
  user2Id     String
  user2       User     @relation("User2Chatroom", fields: [user2Id], references: [id])
}