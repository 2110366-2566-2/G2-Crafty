// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum MessageType {
  TEXT
  IMAGE
  COMPONENT
}

model User {
  id        String @id @default(cuid())
  username  String @unique
  hashedPwd String
  role      Role   @default(USER)

  crafterRoom Chatroom[] @relation("CrafterRoom")
  crafteeRoom Chatroom[] @relation("CrafteeRoom")
}

model Post {
  id      String @id @default(cuid())
  title   String
  detail  String
  content String
  price   Float
}

model Product {
  id       String @id @default(cuid())
  title    String
  desc     String
  price    Float
  deadline String
  status   String
  note     String

  chatRoomId String @unique
  chatRoom Chatroom  @relation(fields: [chatRoomId], references: [id])
}

model Message {
  id           String      @id @default(uuid())
  senderId     String
  content      String
  messageType  MessageType
  isRead       Boolean     @default(false)
  date         DateTime    @default(now())

  chatRoomId   String
  chatRoom     Chatroom    @relation(fields: [chatRoomId], references: [id])
}

model Chatroom {
  id          String   @id @default(uuid())
  messages    Message[]
  crafterId     String
  crafter       User     @relation("CrafterRoom", fields: [crafterId], references: [id])
  crafteeId     String
  craftee       User     @relation("CrafteeRoom", fields: [crafteeId], references: [id])

  productId   String
  product   Product?
}